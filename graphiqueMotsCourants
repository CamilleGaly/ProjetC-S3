import matplotlib.pyplot as plt
import numpy as np
import os

mots = []


with open("resultatOcc.txt", "r") as f:
    for ligne in f:
        mot, occurrence = ligne.split()
        mots.append((mot, int(occurrence)))
        
# print(mots)

def affiche_premiers_mots(nombreMots, données):
    liste_mots = []
    liste_occurrences = []
    for i in range(nombreMots):
        liste_mots.append(données[i][0])
        liste_occurrences.append(données[i][1])
    plt.bar(liste_mots, liste_occurrences)
    plt.xlabel("Mot")
    plt.ylabel("Nombre d'occurrences")
    plt.show()

affiche_premiers_mots(20, mots)
        
    
        


